{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@hichchi/nest-core": ["libs/nest-core/src/index.ts"],
      "@hichchi/nest-crud": ["libs/nest-crud/src/index.ts"],
      "@hichchi/utils": ["libs/utils/src/index.ts"]
    },
  },
  "exclude": ["node_modules", "tmp"]
}
